{% extends '::base.html.twig' %}

{% block content -%}
    <h1>Post list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Author</th>
                <th>Message</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}


            <tr>
                <td>{{ (entity.userId) }}</td>
                <td>{{ entity.message }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('post_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('post_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('post_new', { 'id': topicId }) }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
